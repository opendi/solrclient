{
    "name": "opendi/solrclient",
    "type": "library",
    "description": "Client for Apache Solr",
    "keywords": ["solr"],
    "homepage": "https://github.com/opendi/solrclient",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Opendi AG",
            "email": "info@opendi.com",
            "homepage": "http://www.opendi.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "guzzlehttp/guzzle": "^6.0.0",
        "opendi/lang": "^1.0.0",
        "pimple/pimple": "^3.0.0",
        "symfony/console": "^3.0.0",
        "symfony/finder": "^3.0.0"
    },
    "require-dev": {
        "mockery/mockery": "*"
    },
    "autoload": {
        "psr-4": {
            "Opendi\\Solr\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opendi\\Solr\\Client\\Tests\\": "tests/src/"
        }
    },
    "bin": [
        "bin/solr"
    ]
}
